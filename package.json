{
  "name": "symb-o-rama-audio-packager",
  "version": "1.1.1",
  "description": "Audio preparation tool optimized for holiday sequencing and show systems.",
  "author": {
    "name": "John Thomas DuCrest Lock",
    "email": "johnducrest1@gmail.com"
  },
  "main": "app/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:mac": "electron-builder --mac --arm64",
    "dist:win": "electron-builder --win --x64",
    "dist:linux": "electron-builder --linux --x64"
  },
  "build": {
    "appId": "com.symbeyond.symborama",
    "productName": "Symb-O-Rama Audio Packager",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "app/**/*",
      "backend/**/*",
      "runtime/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "backend/",
        "to": "backend/"
      },
      {
        "from": "runtime/",
        "to": "runtime/"
      }
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/SYMBEYOND_logo_mac.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/icons/SYMBEYOND_logo_pc.ico",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets/icons/SYMBEYOND_logo_linux.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3"
  }
}

